<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cn.cms.dao.XiaoshuoDao">
    <resultMap id="base" type="com.cn.cms.po.XiaoshuoBase">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_tag" property="delTag" />
        <result column="last_modify_user_id" property="lastModifyUserId" />
        <result column="create_user_id" property="createUserId" />
    </resultMap>
    <resultMap type="com.cn.cms.po.XiaoshuoClassification" id="classify" extends="base" >
        <result column="classify_name" property="classifyName" />
    </resultMap>
    <resultMap id="xiaoshuoList" type="com.cn.cms.po.XiaoshuoAbout" extends="base">
        <result column="title" property="title"/>
        <result column="parent_id" property="parentId"/>
        <result column="status" property="status"/>
        <result column="author" property="author"/>
        <result column="author_id" property="authorId"/>
        <result column="dec" property="dec"/>
        <result column="sort" property="sort"/>
        <result column="count" property="count"/>
    </resultMap>
    <resultMap id="chapterList" type="com.cn.cms.po.XiaoshuoChapter" extends="base">
        <result column="parent_id" property="parentId"/>
        <result column="title" property="title"/>
        <result column="num" property="num"/>
    </resultMap>

    <sql id="name">xiaoshuo_classify</sql>
    <sql id="about">xiaoshuo_about</sql>
    <sql id="chapter">xiaoshuo_chapter</sql>
    <sql id="base">
        id,create_time,update_time,del_tag,last_modify_user_id,create_user_id
    </sql>
    <sql id="all_classify_column">
        id,create_time,
        update_time,last_modify_user_id,create_user_id,del_tag
    </sql>
    <sql id="all_about_column">
        title,parent_id,`status`,author,author_id,`dec`,sort,`count`
    </sql>
    <sql id="all_chapter_column">
        title,parent_id,`num`
    </sql>
    <sql id="delTag"> where del_tag = 1 </sql>

    <select id="getClassifyCount" resultType="java.lang.Integer">
        select count(1) from <include refid="name"/> <include refid="delTag" />
    </select>

    <insert id="addClassify">
        INSERT INTO <include refid="name"/> (classify_name) VALUE (#{name})
    </insert>

    <select id="getClassifyList" resultMap="classify">
        SELECT <include refid="all_classify_column"/>,classify_name FROM <include refid="name"/> order by id desc limit ${page.start},${page.pageSize};
    </select>

    <update id="updateClassify">
        update <include refid="name"/> set classify_name=#{p1.classifyName} where id = ${p1.id};
    </update>

    <select id="getXiaoshuoList" resultMap="xiaoshuoList">
        SELECT <include refid="base"/>,<include refid="all_about_column"/> from <include refid="about"/> ORDER by sort limit ${page.start},${page.pageSize};
    </select>

    <select id="getListCount" resultType="java.lang.Integer">
        select COUNT(1) FROM <include refid="about"/> <include refid="delTag" />
    </select>

    <select id="getChapterCount" resultType="java.lang.Integer">
        SELECT count(1) FROM <include refid="chapter"/> <include refid="delTag" />  and parent_id = #{id}
    </select>

    <select id="getXiaoshuoChapterList" resultMap="chapterList">
        SELECT <include refid="base"/>,<include refid="all_chapter_column"/> from <include refid="chapter"/><include refid="delTag" /> and parent_id = #{id} ORDER by num limit ${page.start},${page.pageSize};
    </select>
    <select id="getAllChapterList" resultMap="chapterList">
        SELECT <include refid="base"/>,<include refid="all_chapter_column"/> from <include refid="chapter"/><include refid="delTag" /> ORDER by num limit ${page.start},${page.pageSize};
    </select>

</mapper>