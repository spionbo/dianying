<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cn.cms.dao.UserDao">
    <resultMap id="base" type="com.cn.cms.po.Base">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_tag" property="delTag" />
        <result column="last_modify_user_id" property="lastModifyUserId" />
        <result column="create_user_id" property="createUserId" />
    </resultMap>
    <resultMap type="com.cn.cms.po.User" id="user" extends="base" >
        <result column="user_name" property="userName" />
        <result column="head_image" property="headImage" />
        <result column="real_name" property="realName" />
        <result column="pwd" property="pwd" />
        <result column="user_id" property="userId" />
        <result column="idfa" property="idfa" />
    </resultMap>

    <sql id="name">
        user
    </sql>
    <sql id="all_base">
        id,last_modify_user_id,last_modify_user_name,
        create_user_id,create_time,create_time_str,update_time,update_time_str
    </sql>
    <sql id="all_column">
        user_name,head_image,real_name,pwd,user_id,idfa
    </sql>
    <sql id="not_admin">
      SELECT user_id FROM fhvkxetpgjkm
    </sql>

    <sql id="delTag"> where del_tag = 1 </sql>

    <select id="findUserName" resultMap="user">
        select <include refid="all_base"/>,<include refid="all_column" /> from <include refid="name"/> <include refid="delTag" /> and user_name = #{userName};
    </select>

    <select id="getUserInfo" resultMap="user">
        select <include refid="all_base"/>,<include refid="all_column" /> from <include refid="name"/>
        where user_id = "${userId}"
    </select>

    <select id="queryUserName" resultType="java.lang.Integer">
        select count(1) from <include refid="name"/> <include refid="delTag" /> and user_name = #{userName};
    </select>

    <select id="queryUserCount" resultType="java.lang.Integer">
          select count(1) from <include refid="name"/> <include refid="delTag" />,and user_id not in(<include refid="not_admin"/>);
    </select>

    <select id="queryUserList" resultMap="user">
        select <include refid="all_base"/>,<include refid="all_column" /> from <include refid="name"/>
        WHERE user_id not in(<include refid="not_admin"/>)
        order by id desc limit ${page.start},${page.pageSize};
    </select>

    <select id="queryAdmin" resultType="java.lang.Integer">
        SELECT count(1) from <include refid="name"/>
        inner join fhvkxetpgjkm on "${userId}"=fhvkxetpgjkm.user_id
        where user.del_tag = 1
        and user.user_id = "${userId}"
    </select>

    <insert id="saveUser" useGeneratedKeys="true" keyProperty="user.id">
        insert into <include refid="name"/> (<include refid="all_base"/>,<include refid="all_column" />) value (null,
        #{user.lastModifyUserId},#{user.lastModifyUserName},
        #{user.createUserId},
        null,#{user.createTimeStr},
        null,#{user.updateTimeStr},
        #{user.userName},#{user.headImage},#{user.realName},
        #{user.pwd},#{user.userId},#{user.idfa});
    </insert>

    <delete id="deleteUser">
        DELETE FROM <include refid="name"/> WHERE user_id = "${userId}"
    </delete>

    <update id="updateUser">
        UPDATE <include refid="name"/>
        <set>
            pwd = #{user.pwd},
            <if test="user.realName != null">
                real_name = #{user.realName},
            </if>
            <if test="user.headImage != null">
                head_image = #{user.headImage},
            </if>
            <if test="user.lastModifyUserId != null">
                last_modify_user_id = #{user.lastModifyUserId},
            </if>
            <if test="user.updateTimeStr != null">
                update_time_str = #{user.updateTimeStr},
            </if>
            last_modify_user_name = #{user.lastModifyUserName},
            update_time_str = #{user.updateTimeStr}
        </set>
        WHERE user_id = "#{user.userId}"
    </update>

</mapper>